			aside.ui.three.wide.column.computer.only(style="background: #222D32; height: 100vh;")
			#main-wrapper.ui.twelve.wide.computer.sixteen.wide.tablet.column
				.search-results-feed
					.ui.items
						.product.item.ui.two.column.grid
							.thumb-and-info.column
