doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title B-Stock UI
		link(rel='stylesheet', type='text/css', href='semantic/dist/semantic.min.css')
